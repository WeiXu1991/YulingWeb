  div(class='project-list container')
    each project in projects
      a(href=project.link)
        div(class='project row')


          div(class='project-image col-lg-7 order-lg-2')
            img(src=project.image)
          div(class='project-head col-lg-5 col-md-7 order-lg-1')
            h2(class="project-subtitle") #{project.subTitle}
            h1(class="project-title") #{project.title}
